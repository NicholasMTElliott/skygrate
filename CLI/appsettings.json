{
    "Logging": {
        "LogLevel": {
            "Default": "Information"
        }
    },
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": {
            "Console": { "Name": "Console" },
            "File": {
                "Name": "File",
                "Args": {
                    "path": "skygrate.log",
                    "rollingInterval": "Day"
                }
            }
        }
    }
}